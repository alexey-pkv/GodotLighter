if(CMAKE_SYSTEM_NAME STREQUAL "Linux")
	set(GODOTLIGHTER_PLATFORM linux CACHE INTERNAL "")
elseif(CMAKE_SYSTEM_NAME STREQUAL "Windows")
	set(GODOTLIGHTER_PLATFORM windows CACHE INTERNAL "")
